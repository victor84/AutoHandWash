<Page x:Class="TerminalApp.ServicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      d:DesignHeight="469" d:DesignWidth="542"
	  Title="ServicesPage" SizeChanged="Page_SizeChanged" Loaded="Page_Loaded">

    <Grid x:Name="TopGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Border  Grid.Column="1" 
                 BorderBrush="#FFB6B6B6" 
                 BorderThickness="2, 0, 0, 0"
                 Margin="0,0,0,0">

            <Grid x:Name="ServicesGrid" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Line Grid.Row="0" Stroke="#FFB6B6B6" StrokeThickness="2" Stretch="Fill" VerticalAlignment="Bottom"
                  X1="1" Y1="0" X2="0"  Y2="0"></Line>
                
                <Line Grid.Row="1" Stroke="#FFB6B6B6" StrokeThickness="2" Stretch="Fill" VerticalAlignment="Bottom"
                  X1="1" Y1="0" X2="0"  Y2="0"></Line>
                
                <Line Grid.Row="2" Stroke="#FFB6B6B6" StrokeThickness="2" Stretch="Fill" VerticalAlignment="Bottom"
                  X1="1" Y1="0" X2="0"  Y2="0"></Line>

                <Line Grid.Row="3" Stroke="#FFB6B6B6" StrokeThickness="2" Stretch="Fill" VerticalAlignment="Bottom"
                  X1="1" Y1="0" X2="0"  Y2="0"></Line>

                <Line Grid.Row="4" Stroke="#FFB6B6B6" StrokeThickness="2" Stretch="Fill" VerticalAlignment="Bottom"
                  X1="1" Y1="0" X2="0"  Y2="0"></Line>

                <Line Grid.Row="5" Stroke="#FFB6B6B6" StrokeThickness="2" Stretch="Fill" VerticalAlignment="Bottom"
                  X1="1" Y1="0" X2="0"  Y2="0"></Line>

                <TextBlock Grid.Row="0" x:Name="Service1TextBlock" TextWrapping="Wrap" Text="Услуга №1&#x0a;Цена:NNN руб." VerticalAlignment="Center" TextAlignment="Right" FontWeight="Bold"/>
                <TextBlock Grid.Row="1" x:Name="Service2TextBlock" TextWrapping="Wrap" Text="Услуга №2&#x0a;Цена:NNN руб." VerticalAlignment="Center" TextAlignment="Right" FontWeight="Bold"/>
                <TextBlock Grid.Row="2" x:Name="Service3TextBlock" TextWrapping="Wrap" Text="Услуга №3&#x0a;Цена:NNN руб." VerticalAlignment="Center" TextAlignment="Right" FontWeight="Bold"/>
                <TextBlock Grid.Row="3" x:Name="Service4TextBlock" TextWrapping="Wrap" Text="Услуга №4&#x0a;Цена:NNN руб." VerticalAlignment="Center" TextAlignment="Right" FontWeight="Bold"/>
                <TextBlock Grid.Row="4" x:Name="Service5TextBlock" TextWrapping="Wrap" Text="Услуга №5&#x0a;Цена:NNN руб." VerticalAlignment="Center" TextAlignment="Right" FontWeight="Bold"/>
                <TextBlock Grid.Row="5" x:Name="Service6TextBlock" TextWrapping="Wrap" Text="Услуга №6&#x0a;Цена:NNN руб." VerticalAlignment="Center" TextAlignment="Right" FontWeight="Bold"/>
                <TextBlock Grid.Row="6" x:Name="Service7TextBlock" TextWrapping="Wrap" Text="Услуга №7&#x0a;Цена:NNN руб." VerticalAlignment="Center" TextAlignment="Right" FontWeight="Bold"/>
            </Grid>

        </Border>

        <Grid x:Name="InfoGrid" Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>                
                <RowDefinition Height="0"/>

            </Grid.RowDefinitions>

            <Line Grid.Row="1" Stroke="#FFB6B6B6" StrokeThickness="2" Stretch="Fill" VerticalAlignment="Bottom"
                  X1="1" Y1="0" X2="0"  Y2="0"></Line>
            
            <Line Grid.Row="3" Stroke="#FFB6B6B6" StrokeThickness="2" Stretch="Fill" VerticalAlignment="Bottom"
                  X1="1" Y1="0" X2="0"  Y2="0"></Line>
            
            <Line Grid.Row="5" Stroke="#FFB6B6B6" StrokeThickness="2" Stretch="Fill" VerticalAlignment="Bottom"
                  X1="1" Y1="0" X2="0"  Y2="0"></Line>            
            
            <Viewbox Grid.Row="0">
                <TextBlock Text="Баланс:" FontWeight="Bold"/>
            </Viewbox>
            <Viewbox Grid.Row="1">
                <TextBlock x:Name="RestOfMoneyTextBlock" Text="00,00 руб" FontWeight="Bold"/>
            </Viewbox>
            <Viewbox Grid.Row="2">
                <TextBlock Text="Таймер:" FontWeight="Bold"/>
            </Viewbox>
            <Viewbox Grid.Row="3">
                <TextBlock x:Name="RestOfTimeTextBlock" Text="00:00" FontWeight="Bold"/>
            </Viewbox>
            <Viewbox Grid.Row="4">
                <TextBlock Text="Услуга:" FontWeight="Bold"/>
            </Viewbox>            
            <Viewbox Grid.Row="5">
                <TextBlock x:Name="CurrentServiceNameTextBlock" Text="Название услуги" FontWeight="Bold"/>
            </Viewbox>
            <Viewbox Grid.Row="6">
                <TextBlock x:Name="HintTextBlock" Text="Подсказка" FontWeight="Bold"/>
            </Viewbox>            

            <TextBlock Grid.Row="7" x:Name="LogicStateTextBlock" Text="Состояние логики" VerticalAlignment="Center" Margin="0,8" Visibility="Hidden"/>

        </Grid>
    </Grid>
</Page>
