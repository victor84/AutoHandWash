<Window x:Class="TerminalApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="609" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <TabControl x:Name="MainTabControl" Margin="0,0,0,0">
            <TabItem x:Name="ServiceTab" Header="Услуги">
                <Grid>
                    <Frame x:Name="ServicePageFrame" Content="Frame" Source="/TerminalApp;component/ServicesPage.xaml" NavigationUIVisibility="Hidden" IsHitTestVisible="True"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="VideoTab" Header="Реклама">
                <Grid>
                    <MediaElement x:Name="VideoPlayer" LoadedBehavior="Manual" UnloadedBehavior="Stop"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="PrizeTab" Header="Выдача приза">
                <Grid>
                    <Frame x:Name="PrizePageFrame" Content="Frame" Source="/TerminalApp;component/PrizePage.xaml" NavigationUIVisibility="Hidden" IsHitTestVisible="True"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
